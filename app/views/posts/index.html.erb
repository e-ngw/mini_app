<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <%= render 'search_form', q: @q, url: posts_path %>
    </div>
  </div>

  <!-- 投稿グリッド一覧 -->
    <% if @posts.present? %>
      <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 g-4">
        <%= render @posts %>
    <% else %>
      <div class="row">
        <div class="col-12 text-center">
          <p>投稿はまだありません。</p>
        </div>
      </div>
    <% end %>
  </div>
</div>
