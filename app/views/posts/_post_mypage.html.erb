<%= render 'shared/post_card', post: post do %>
  <%# タグの部分だけ %>
  <div class="tag-scroll-wrapper mb-2">
    <% post.tags.each do |tag| %>
      <%= link_to "##{tag.name}", @user == current_user ? mypage_path(q: { tags_name_cont: tag.name }) : user_path(@user, q: { tags_name_cont: tag.name }), class: "hashtag" %>
    <% end %>
  </div>
<% end %>
