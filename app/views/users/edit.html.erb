<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <h3 class="mb-4 text-center"><%= t('.title') %></h3>

      <%= form_with model: @user, url: mypage_path, method: :patch, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <!-- アカウント名 -->
        <div class="mb-3">
          <%= f.label :name, "アカウント名", class: "form-label" %>
          <%= f.text_field :name, class: "form-control", placeholder: "アカウント名を入力" %>
        </div>

        <!-- 自己紹介文 -->
        <div class="mb-4">
          <%= f.label :introduction, class: "form-label" %>
          <%= f.text_area :introduction, class: "form-control", rows: 4, placeholder: "自己紹介文を入力（200文字以内）" %>
        </div>

        <!-- 公開/非公開設定 -->
        <div class="form-group">
          <%= f.label :is_public, "アカウントを公開する" %>
          <%= f.check_box :is_public %>
        </div>

        <!-- 保存ボタン -->
        <div class="text-end">
          <%= f.submit "保存", class: "btn btn-outline-dark" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
