<div class="container py-4">

  <!-- ユーザープロフィールと検索 -->
  <div class="row mb-4 g-3 align-items-start">
    <!-- 自己紹介（約60% = col-md-7） -->
    <div class="col-md-7">
      <div class="d-flex justify-content-between flex-wrap">
        <div>
          <h2 class="fw-bold d-inline me-2"><%= @user.name %></h2>
          <!-- プロフィール編集アイコン -->
          <%= link_to '#', class: 'text-muted', title: 'プロフィール編集' do %>
            <i class="bi bi-pencil-square"></i>
          <% end %>
        </div>
      </div>

      <div class="d-flex gap-3 my-2 small">
        <div><strong>フォロー</strong> 0</div>
        <div><strong>フォロワー</strong> 0</div>
        <div><i class="bi bi-star"></i></div>
        <div><i class="bi bi-bookmark"></i></div>
      </div>

      <div class="form-control bg-light border-0 rounded p-3" readonly style="min-height: 80px;">
        <%#<%= @user.profile.presence || '自己紹介文はまだありません。' %> 自己紹介文はまだありません。
      </div>
    </div>

    <!-- 検索フォーム（約40% = col-md-5） -->
    <div class="col-md-5">
      <%#<div class="d-flex justify-content-end mt-5">%>
      <div class="d-flex justify-content-end" style="margin-top: 64px;">
        <%= render partial: 'posts/search_form', locals: { q: @q, url: mypage_path } %>
      </div>
    </div>
  </div>

  <!-- 投稿一覧（フィード） -->
  <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-4 g-4">
    <% if @posts.present? %>
      <%= render @posts, partial: "posts/post_mypage", as: :post %>
    <% else %>
      <div class="col">
        <p>投稿はまだありません。</p>
      </div>
    <% end %>
  </div>
</div>